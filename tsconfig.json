{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "Node16",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
}
